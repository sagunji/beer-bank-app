{
  "name": "beer-bank",
  "version": "0.1.0",
  "dependencies": {
    "axios": "^0.17.1",
    "bootstrap": "3.4.1",
    "immutable": "^4.0.0-rc.12",
    "izitoast": "^1.4.0",
    "node-sass-chokidar": "^1.2.0",
    "npm-run-all": "^4.1.2",
    "prop-types": "^15.6.0",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-infinite-scroll-component": "^4.3.0",
    "react-redux": "^6.0.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --single-quote --print-width 120 --write \"src/**/*.{js,jsx}\"",
      "git add"
    ]
  },
  "scripts": {
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "build-css": "node-sass-chokidar src/assets/sass/ -o src/assets/sass",
    "watch-css": "npm run build-css && node-sass-chokidar src/assets/sass/ -o src/assets/sass --watch --recursive",
    "precommit": "lint-staged",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prettify": "prettier --single-quote --print-width 120 --write \"src/**/*.{js,jsx}\""
  },
  "devDependencies": {
    "eslint": "^4.16.0",
    "eslint-config-react-app": "^1.0.4",
    "eslint-loader": "1.7.1",
    "eslint-plugin-flowtype": "^2.42.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "5.0.3",
    "eslint-plugin-react": "7.0.1",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.0",
    "prettier": "^1.10.2"
  },
  "engines": {
    "node": ">= 8.9.1",
    "npm": ">= 5.5.1"
  }
}
